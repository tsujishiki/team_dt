<!--
<h1>Listing articles<h1/>
-->

<table>
	
  <!--
  <tr>
    <th>Title</th>
	<th>Text</th>
	<th colspan="3"></th>
  </tr>
  -->
  
  <% @articles.each do |article| %>
    <tr class="article_title">
      <td colspan="2">
		<%= link_to "#{article.title}", article_path(article) %>
	  </td>
	</tr>
    <tr class="article_text">
	  <td colspan="2"><%= article.text %></td>
	</tr>
	<tr>
	  <!--<td><%= link_to "Show", article_path(article) %></td>-->
	  <% if session[:user_id] %>
	  <td><%= link_to "编辑", edit_article_path(article) %></td>
	  <td><%= link_to "删除", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></td>
	  <% end %>
	</tr>
  <% end %>
  
</table>

<%= button_to "新建文章", new_article_path %>