<!--
<h1>Listing articles<h1/>
-->

<table>
	
  <!--
  <tr>
    <th>Title</th>
	<th>Text</th>
	<th colspan="3"></th>
  </tr>
  -->
  
  <% @articles.each do |article| %>
    <tr class="article_title">
      <td colspan="2">
		<%= link_to "#{article.title}", article_path(article) %>
	  </td>
	</tr>
    <tr class="article_text">
	  <td colspan="2">
		<% if article.text.length >= 15 %>
		  <%= article.text[0, 14] %>...
		<% else %>
		  <%= article.text %>
		<% end %>
	  </td>
	</tr>
	<tr>
	  <!--<td><%= link_to "Show", article_path(article) %></td>-->
	  <% if session[:user_id] %>
	    <td><%= link_to "编辑", edit_article_path(article) %></td>
	    <td><%= link_to "删除", article_path(article), method: :delete, data: { confirm: "是否确定删除？" } %></td>
	  <% end %>
	</tr>
  <% end %>
  
</table>

<br>

<% if session[:user_id] %>
  <%= link_to "新建文章", new_article_path %>
<% end %>